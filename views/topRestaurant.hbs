<h1>人氣餐廳</h1>
<hr />
{{#each restaurants}}
<div class="card mb-3 ml-auto mr-auto" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <a href="/restaurants/{{this.id}}"><img src="{{this.image}}" class="card-img"></a>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <span class="badge badge-secondary">收藏數 : {{this.FavoritedUsers.length}}</span>
        <p class="card-text">{{this.description}}</p>
        <a href="/restaurants/{{this.id}}"><button class="btn btn-primary">Show</button></a>
        {{#if isFavorited}}
        <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" class="d-inline">
          <button class="btn btn-danger" type="submit">移除最愛</button>
        </form>
        {{else}}
        <form action="/favorite/{{this.id}}" method="POST" class="d-inline">
          <button class="btn btn-primary" type="submit">加入最愛</button>
        </form>
        {{/if}}
      </div>
    </div>
  </div>
</div>
{{/each}}